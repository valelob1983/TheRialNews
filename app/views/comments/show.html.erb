<p><%= notice %></p>

<div class="mb-4">
<%= render @comment %>
</div>

<div class="d-flex justify-content-start align-items-center">
    <% if user_signed_in? %>
    <% if current_user.id == @comment.user_id %>
    <div class="me-2"> 
      <%= link_to "Edit this comment", edit_comment_path(@comment), class: "btn btn-warning" %> 
    </div>
    <div class="me-2">
    <%= link_to "Back to comments", comments_path, class: "btn btn-secondary" %>
    </div>
    <div> 
      <%= button_to "Destroy this comment", @comment, method: :delete, class: "btn btn-danger", data: { confirm: "¿Estás seguro de que quieres eliminar este comentario?" } %>
    </div>  
      <% end %>
  <% end %>  
</div>

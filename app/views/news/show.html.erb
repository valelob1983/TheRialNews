<p><%= notice %></p>

<div class="mb-4">
  <%= render @news %>
</div>

<div class="d-flex justify-content-start align-items-center">
  <% if user_signed_in? %>
    <% if current_user.id == @news.user_id %>
      <div class="me-2">
        <%= link_to "Edit this news", edit_news_path(@news), class: "btn btn-warning" %>
      </div>
      <div class="me-2">
        <%= link_to "Back to news", news_index_path, class: "btn btn-secondary" %>
      </div>
      <div>
        <%= button_to "Destroy this news", @news, method: :delete, class: "btn btn-danger", data: { confirm: "¿Estás seguro de que quieres eliminar esta noticia?" } %>
      </div>
    <% end %>
  <% end %> 
</div>





<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card p-4 shadow">
        <h2 class="text-center mb-4">Registro</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
              <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repit your password" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, autocomplete: "Name", class: "form-control", placeholder: "Enter your name" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :Phone, class: "form-label" %>
            <%= f.text_field :Phone, autocomplete: "Phone", class: "form-control", placeholder: "Enter your Phone" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :age, class: "form-label" %>
            <%= f.text_field :age, autocomplete: "Age", class: "form-control", placeholder: "Enter your Age" %>
          </div>
          

          <div class="d-grid">
            <%= f.submit "Registrarse", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

